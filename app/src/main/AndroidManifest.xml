<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vikas.safetyfirst">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".mWebview.Webview" />
        <activity
            android:name=".mKnowitActivity.Ladders.mNonSelfSupportingLadder.NonSelfSupporting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mKnowitActivity.Ladders.mSelfSupportingLadder.SelfSupporting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mNewsActivity.NewsDetailActivity"
            android:parentActivityName=".mNewsActivity.NewsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mNewsActivity.NewsActivity" />
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/sign_in" />
        <activity
            android:name=".mNewsActivity.NewsActivity"
            android:label="@string/titleNewsActivity" />
        <activity
            android:name=".mDiscussion.DiscussionActivity"
            android:label="@string/titleDiscussionActivity" />
        <activity
            android:name=".mDiscussion.NewPostActivity"
            android:label="@string/titleNewPostActivity" />
        <activity
            android:name=".mDiscussion.PostDetailActivity"
            android:label="@string/titlePostDetailActivity" />
        <activity
            android:name=".DashboardActivity"
            android:label="@string/titleDashboard" />
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up" />
        <activity
            android:name=".PicActivity"
            android:label="@string/title_activity_pic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".mKnowitActivity.KnowitActivity" />
        <activity android:name=".mWebview.WebViewActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mKnowitActivity.Scaffolding.Types.PumpJack"></activity>
    </application>

</manifest>