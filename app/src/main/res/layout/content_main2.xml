<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/no_padding"
    android:paddingRight="@dimen/no_padding"
    android:paddingTop="@dimen/no_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vikas.dtu.safetyfirst.DashboardActivity"
    tools:showIn="@layout/app_bar_main2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageView2"
            android:layout_marginBottom="@dimen/md_keylines"
            android:src="@drawable/home"
            android:scaleType="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="USERNAME"
            android:id="@+id/username"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="post, company"
            android:id="@+id/post"
            android:textColor="@color/black"
            android:textAllCaps="false"
            style="@style/Base.TextAppearance.AppCompat.Small"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:layout_weight="1"
                android:onClick="startNews"/>

            <ImageView
                android:src="@drawable/discussion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:onClick="startDiscussion"/>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/knowit"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:onClick="startKnowIt" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="News"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discussion"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Know it"
                android:paddingRight="5dp"
                android:gravity="center"
                android:layout_weight="1"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
